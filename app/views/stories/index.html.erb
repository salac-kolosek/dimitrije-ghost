<h1>Stories</h1>
<%= form_tag(stories_path, method: :get) do %>
  <div class="input-group mb-3">
    <%= text_field_tag :term, params[:term], id: "search", class: "form-control", placeholder: "Search by title" %>
    <div class="input-group-append">
      <%= submit_tag 'Search', name: nil, class: "btn btn-outline-secondary" %>
    </div>
  </div>
<% end %>
<% @stories.each do |story| %>
  <div class="story-box">
    <h5><%= link_to story.title, edit_story_path(story), class: "text-secondary font-weight-bold nounderline" %></h5>
    <% story.tags.each do |tag| %>
      <span class="badge badge-dark"><%= tag.name %></span>
    <% end %>
    <span class="text-muted"><%= " - Written by #{story.owner.full_name}" %></span>
    <p>

  <%= link_to "View", story_path(story), class: "btn btn-primary" %>
</p>
    <hr>
  </div>
<% end %>
<p>
  <%= link_to "Write story", new_story_path, class: "btn btn-primary" %>
</p>
