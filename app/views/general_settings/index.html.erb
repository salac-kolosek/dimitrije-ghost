<h2>Title & description</h2>


<button class="btn btn-primary" type="button" data-toggle="collapse" data-target="#collapseForm" aria-expanded="false" aria-controls="collapseForm">
  Expand
</button>
<br><br>
<div class="collapse" id="collapseForm">
  <%= form_for(@site_title, url: site_title_index_path) do |f| %>
    <ul>
      <% @site_title.errors.full_messages.each do |error| %>
        <li><%= error %></li>
      <% end %>
    </ul>

    <div class="form-group">
      <%= f.label "The name of your site" %>
      <%= f.text_field :title, class: "form-control" %>
    </div>

    <div class="form-group">
      <%= f.label "Used in your theme, metadata and search results" %>
      <input type="text" name="disabled" class="form-control" disabled>
    </div>

    <%= f.submit "Save settings", class: "btn btn-primary" %>

  <% end %>
</div>
